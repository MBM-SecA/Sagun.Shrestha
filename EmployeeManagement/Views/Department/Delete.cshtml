@model Department;
@{
    var fn = Model.Name;
    ViewData["TitlePhrase"] = fn;
}

<h2 class="text-danger">Are you sure to delete following?</h2>
<ul class="List-group">
    <li class="List-group-item">Name : @fn</li>
    <li class="List-group-item">Code : @Model.Code</li>
    <li class="List-group-item">Description : @Model.Description</li>
    <li class="List-group-item">StartDate : @Model.StartDate</li>
   
</ul>
<form asp-controller="Department" asp-action="Delete" method="Post">
     <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete Anyhow</button>
</form>
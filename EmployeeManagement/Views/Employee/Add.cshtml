@model Person
@{
    ViewData["Titlephrase"] = "Add Employee";
}
<h1>Add new Employee</h1>
<hr/>

<form asp-controller="Employee" asp-action="Add" method="POST">
  <div class="form-group">
    <label asp-for="FirstName"></label>
    <span class="text-danger" asp-validation-for="FirstName"></span>
    <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name">

  </div>
   
  <div class="form-group">
    <label asp-for="SurName"></label>
    <span class="text-danger" asp-asp-validation-for="SurName"></span>
    <input type="text" class="form-control" asp-for="SurName" placeholder="Enter Last Name">
  </div>
   <div class="form-group">
    <label asp-for="Address"></label>
   <textarea class="form-control" asp-id="Address" placeholder="Enter Address"></textarea>
   
  </div>
   <div class="form-group">
    <label asp-for="Gender"></label>
    <input type="text" class="form-control" asp-id="Gender" placeholder="Enter Gender">
   
  </div>
   <div class="form-group">
    <label asp-for="Salary"></label>
    <input type="number" class="form-control" asp-id="Salary" placeholder="Enter Salary">
   
  </div>
 
  
  <button type="submit" class="btn btn-primary">Save Employee</button>
</form>
@model Person
@{
    ViewData["Titlephrase"] = "Update Employee";
    string[] genders = {"Female", "Male", "Others"};
}
<h1>Update Employee</h1>
<hr/>

<form asp-controller="Employee" asp-action="Edit" method="POST">
  <input type="hidden" asp-for="Id" />
  <div class="form-group">
    <label asp-for="FirstName"></label>
    <span class="text-danger" asp-validation-for="FirstName"></span>
    <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name">

  </div>
   
  <div class="form-group">
    <label asp-for="SurName"></label>
    <span class="text-danger" asp-asp-validation-for="SurName"></span>
    <input type="text" class="form-control" asp-for="SurName" placeholder="Enter Last Name">
  </div>
   <div class="form-group">
    <label asp-for="Address"></label>
   <textarea class="form-control" asp-for="Address" placeholder="Enter Address"></textarea>
   
  </div>
   <div class="form-group">
    <label asp-for="Gender"></label>
     @foreach (var gender in genders)
    {
       
        <div class="form-check form-check-inline">
            <input type="radio"  class="form-check-input" asp-for="Gender" id="@gender" value="@gender[0]"/> 
            <label class="form-check-label" asp-for="@gender">@gender</label>
        </div> 
    }
   </div>


   <div class="form-group">
    <label asp-for="Salary"></label>
    <input type="number" class="form-control" asp-for="Salary" placeholder="Enter Salary">
   
  </div>
 
  
  <button type="submit" class="btn btn-primary">Update Employee</button>
</form>